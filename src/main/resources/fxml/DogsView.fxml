<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="view" alignment="CENTER" prefHeight="200.0"
	prefWidth="320.0" spacing="5.0" xmlns="http://javafx.com/javafx/16"
	xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
	<children>
		<HBox alignment="BASELINE_CENTER" spacing="5.0">
			<children>
				<ComboBox fx:id="breedsCombo" prefWidth="150.0"
					promptText="Seleccione una raza" />
				<Button fx:id="reloadButton" mnemonicParsing="false"
					onAction="#onReloadAction" text="Recargar" />
			</children>
		</HBox>
		<HBox prefHeight="150" prefWidth="200" maxWidth="-Infinity"
			alignment="CENTER">
			<children>
				<ImageView fx:id="dogImage" fitHeight="150.0"
					fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
			</children>
		</HBox>
	</children>
</VBox>
